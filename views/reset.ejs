<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Reset Password</h1>
        </div>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/reset/<%= token %> " method="POST">
                <div class="form-group">
                    <label for="">New Password:</label>
                    <input class="form-control" type="password" autofocus name="password" placeholder="New Password">
                </div>
                <div class="form-group">
                    <label for="">Confirm Password:</label>
                    <input class="form-control" type="password" name="confirm" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update Password</button>
                </div>
            </form>
            <a class="go-back" href="/login">Go Back</a>
        </div>
    </div>
</div>

<%- include("partials/footer") %>