<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 style="text-align: center">Edit Comment</h1>
        </div>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="">Comment Text:</label>
                    <textarea class="form-control" required name="comment[text]" id="Ctext" cols="50" rows="4"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="go-back" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
