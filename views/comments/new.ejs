<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 style="text-align: center">Add New Comment to <%= campground.name %></h1>
        </div>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <label class="text-center" for="">Comment Text:</label>
                    <textarea class="form-control" required placeholder="Put comment here" name="comment[text]" id="Ctext" cols="50" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="go-back" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
