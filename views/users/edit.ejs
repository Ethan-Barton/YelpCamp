<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 style="text-align: center">Edit Profile</h1>
        </div>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users/<%= currentUser._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Username: </label>
                    <input class="form-control" type="text" name="username" value="<%= user.username %>">
                </div>
                <div class="form-group">
                    <label>First Name: </label>
                    <input class="form-control" type="text" name="firstName" value="<%= user.firstName %>">
                </div>
                <div class="form-group">
                    <label>Last Name: </label>
                    <input class="form-control" type="text" name="lastName" value="<%= user.lastName %>">
                </div>
                <div class="form-group">
                    <label>Email: </label>
                    <input class="form-control" type="text" name="email" value="<%= user.email %>">
                </div>
                <div class="form-group">
                    <label>Avatar Url: </label>
                    <input class="form-control" type="text" name="avatar" value="<%= user.avatar %>">
                </div>
                <div class="form-group">
                    <label>Admin Code: </label>
                    <input class="form-control" type="text" name="adminCode" value="<%= user.adminCode %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="go-back" href="/users/<%= currentUser.id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>