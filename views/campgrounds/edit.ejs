<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 style="text-align: center">Edit <%= campground.name %> </h1>
        </div>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Campground Name:</label>
                    <input required  class="form-control" type="text" name="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="">Price:</label>
                    <input required  class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image:</label>
                    <input id="image" type="file" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="">Description:</label>
                    <input required  class="form-control" type="text" name="description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button required  class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="go-back" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
